<% provide(:title, 'Sign Up') %>
<h1>Sign Up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      
      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, :placeholder => "Please enter a valid email address", class: 'form-control' %>
      
      <%= f.label :address %>
      <%= f.text_field :address, :placeholder => "Address should be ended with a ZIP code", class: 'form-control'  %>

      <%= f.label :password %>
      <%= f.password_field :password, :placeholder => "At least 6 digits", class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, :placeholder => "Same as Password", class: 'form-control' %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>