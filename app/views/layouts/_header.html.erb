<header id ="header" class ="header">
  <div class="container">
    <h1 class="logo pull-left">
      <%= link_to "Grocer Bot", root_path, class: "scrollto logo-title" %>
    </h1>
    <nav id = "main-nav" class = "main-nav navbar-right" role="navigation">
      <div class="navbar-header">
        <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button><!--//nav-toggle-->
      </div><!--//navbar-header-->  
      <div class="navbar-collapse collapse" id="navbar-collapse">
        <ul class="nav navbar-nav">
          <li class="active nav-item sr-only"><%= link_to "Home", root_path, class: "scrollto" %></li>
          <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Create Order", current_user %></li>
              <li><%= link_to "Edit Profile", edit_user_path(current_user) %></li>
              <li><%= link_to "Past Orders", orders_path %></li>
              <li class="divider"></li>
              <li><%= link_to "Log out", logout_path, method: "delete" %></li>
            </ul>
          </li>
        <% else %>
          <li class:"nav-item"><%= link_to "Log in", login_path, class:"scrollto" %></li>
        <% end %>
        <li class="nav-item last"><%= link_to "About", about_path, class:"scrollto" %></li>
        </ul><!--//nav-->
      </div><!--//navabr-collapse-->
    </nav><!--//main-nav-->
  </div>
</header><!--//header-->