<% provide(:title, @store.name) %>
<div class = "store_navbar">
  <h1 id = "store_show_title"><%= @store.name %></h1>
  <h2 id = "store_show_address"><%= @store.address %></h2>
</div>
<div class="container">
<div class = "row">
    <div class = "col-md-6">
      <h3>Products (<%= @store.products.count %>)</h3>
      <% if @store.products.any? %>
        <% @products.each do |product| %>
          <ul class = "content_column">
            <li><%= link_to fetch_image_tag(product.image_url, :width => 100, 
              :height => 100), root_path, 
              method: :get %></li>
            <li><%= product.name %></li>
            <li><%= product.category %></li>
            <li>$<%= product.price %></li>
            <li>
              <%= form_for(@order) do |f| %>
                <%= hidden_field_tag(:product_id, product.id) %>
                <%= f.submit "Add to Order", class: "btn btn-primary btn-sm" %>
              <% end %>
            </li>
          </ul>
        <% end %>
    <% end %>
    </div>
    <div class = "col-md-6">
      <h3>Checkout Box (<%= @user.orders.count %>)</h3>
      <% if @user.orders.any? %>
        <% @user.orders.each do |order| %>
          <ul class = "content_column">
            <li><%= link_to fetch_image_tag(order.product.image_url, :width => 30, 
              :height => 30), root_path, 
              method: :get %></li>
            <li><%= order.product.name %></li>
            <li>$<%= order.product.price %></li>
          </ul>
        <% end %>
        <h4>Order Total: $<%= @user.products.sum(:price) %></h4>
        <%= form_for(@order) do |f| %>
                <%= f.submit "Checkout", class: "btn btn-primary btn-md" %>
        <% end %>
      <% end %>
    </div>
</div>
</div>