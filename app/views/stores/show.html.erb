<% provide(:title, @store.name) %>
<h1><%= @store.name %></h1>
<h2><%= @store.address %></h2>

 
<div class="container">
<div class = "row">
    <div class = "col-md-6">
      <% if @store.products.any? %>
        <h3>Products (<%= @store.products.count %>)</h3>
        <% @products.each do |product| %>
          <ul class = "content_column">
            <li><%= link_to fetch_image_tag(product.image_url, :width => 100, 
              :height => 100), root_path, 
              method: :get %></li>
            <li><%= product.name %></li>
            <li><%= product.category %></li>
            <li>$<%= product.price %></li>
            <li>
              <%= form_for(@order) do |f| %>
                <%= hidden_field_tag(:product_id, product.id) %>
                <%= f.submit "Add to Order", class: "btn btn-primary btn-sm" %>
              <% end %>
            </li>
          </ul>
        <% end %>
    <% end %>
    </div>
    <div class = "col-md-6">
      <h3>Checkout Box</h3>
    </div>
</div>
</div>