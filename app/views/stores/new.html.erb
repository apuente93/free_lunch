<% provide(:title, 'Create Store') %>
<h1>Create Store</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@store) do |f| %>
      
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      
      <%= f.label :zip_code %>
      <%= f.number_field :zip_code, class: 'form-control' %>
      
      <%= f.submit "Create store", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>